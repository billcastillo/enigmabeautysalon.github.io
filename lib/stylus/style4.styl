// MIXINS | Fonts | Properties

border-radius(n)
	-webkit-border-radius n
	-moz-border-radius n
	border-radius n

//Grid - For Grid system | no spaces, no padding
.grid
	box-sizing border-box
	font-size 0

//Fonts
.homenaje
	font-family 'Homenaje', 'Georgia', 'Arial'
.cookie
	font-family 'Great Vibes', 'Helvetica'
.hind
	font-family 'Hind Siliguri', 'Georgia'
.para
	font-family 'Hind Siliguri', 'Arial'
	font-weight 300

// Box Shadows
.box-shadow-thin
	moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3)
	-webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3)
	box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3)
.box-shadow-1
	-webkit-box-shadow: 3px 3px 6px 0px rgba(0,0,0,0.33);
	-moz-box-shadow: 3px 3px 6px 0px rgba(0,0,0,0.33);
	box-shadow: 3px 3px 6px 0px rgba(0,0,0,0.33);
.box-shadow-2
	-webkit-box-shadow: 2px 2px 4px 0px rgba(0,0,0,0.33);
	-moz-box-shadow: 2px 2px 4px 0px rgba(0,0,0,0.33);
	box-shadow: 2px 2px 4px 0px rgba(0,0,0,0.33);
.box-shadow-bottom
	-webkit-box-shadow: 0px 1px 4px 0px rgba(0,0,0,0.25);
	-moz-box-shadow: 0px 1px 4px 0px rgba(0,0,0,0.25);
	box-shadow: 0px 1px 4px 0px rgba(0,0,0,0.25);
.box-shadow-around
	-webkit-box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.60);
	-moz-box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.60);
	box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.60);
.box-shadow-around-2
	-webkit-box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.6);
	-moz-box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.6);
	box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.6);


// Transitions
.all-5s
	-webkit-transition: all 0.5s cubic-bezier(.17,.67,.83,.67);
	-moz-transition: all 0.5s cubic-bezier(.17,.67,.83,.67);
	-o-transition: all 0.5s cubic-bezier(.17,.67,.83,.67);
	transition: all 0.5s cubic-bezier(.17,.67,.83,.67);
.all-3s
	-webkit-transition: all 0.3s cubic-bezier(.17,.67,.83,.67);
	-moz-transition: all 0.3s cubic-bezier(.17,.67,.83,.67);
	-o-transition: all 0.3s cubic-bezier(.17,.67,.83,.67);
	transition: all 0.3s cubic-bezier(.17,.67,.83,.67);
.all-1-5s
	-webkit-transition: all 0.15s linear;
	-moz-transition: all 0.15s linear;
	-o-transition: all 0.15s linear;
	transition: all 0.15s linear;

// Button Styles
.button
	&:hover
		background $text-color
		color $white-color
.ghost-button
	width auto
	min-width 200px
	margin 2em auto
	text-align center
	background transparent
	color $text-color
	border 1px solid $text-color
	font-size 1.250em
	font-family 'Hind Siliguri'
	border-radius 999em
	@extend .all-1-5s
	&:hover
		background $text-color
		border 1px solid $text-color
		color #fff

.hr-above::before
	position absolute
	display block
	content ''
	width 10%
	height 1px
	border 2px solid $text-color
	background $text-color
	text-align center
	margin 0 auto
	bottom -5px
	left 0
	right 0

// Underline effect from bottom - fading in
// Add this class to the ul or nav
.nav-hover
	a
		&:after
			position absolute
			display block
			content ''
			left 0
			right 0
			opacity 0
			width auto
			height 2px
			background #444
			@extend .all-3s
			transform translateY(100%)
		&:hover
			&:after
				opacity 1
				transform translateY(0)

